<import src="post-item/post-item-template" />
<view class='post'>
  <swiper class='postOne' autoplay>
    <swiper-item><image src='/image/iqiyi.png'></image></swiper-item>
    <swiper-item><image src='/image/vr.png'></image></swiper-item>
    <swiper-item><image src='/image/wx.png'></image></swiper-item>
  </swiper>
  <block wx:for="{{post_key}}" wx:for-item="item" wx:key="item">
    <view catchtap='onPostTap' data-postId="{{item.postId}}">
      <template is="post-item" data="{{...item}}" />
    </view>
  </block>
</view>